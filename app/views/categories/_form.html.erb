<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :name, autofocus: true, class: "form-control", placeholder: "Category Name" %>
    <%= f.input :description, class: "form-control", placeholder: "Category Description" %>
  </div>
  <div class="form-actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
