<div id="wrapper">
  <%= render 'dashboards/merchant_nav' %>

  <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <a href="#menu-toggle" class="btn btn-info btn-xs" id="menu-toggle">Toggle Menu</a>
                        
                        <div class="row" style="margin-top: 30px;">
                          <h1>Manage Taxes 
                            <%= link_to new_product_tax_path, class: "btn btn-success btn-sm" do %>
                              <i class="fa fa-plus" aria-hidden="true"></i> Add New Tax
                            <% end %>
                          </h1>
                          <hr>
                          
                              <table class="table" style="margin-top: 30px;">
                                <thead>
                                  <tr>
                                    <th>Name</th>
                                    <th>Value</th>
                                    <th colspan="3"></th>
                                  </tr>
                                </thead>

                                <tbody>
                                  <% @product_taxes.each do |product_tax| %>
                                    <tr>
                                      <td><%= product_tax.name %></td>
                                      <td><%= product_tax.value %></td>
                                      <td>
                                        <%= link_to edit_product_tax_path(product_tax) do %>
                                          <i class="fa fa-pencil-square-o btn btn-warning" aria-hidden="true"></i>
                                        <% end %>
                                      </td>
                                      <td>
                                        <%= link_to product_tax, method: :delete, data: { confirm: 'Delete tax?' } do %>
                                          <i class="fa fa-trash btn btn-danger" aria-hidden="true"></i>
                                        <% end %>
                                      </td>
                                    </tr>
                                  <% end %>
                                </tbody>
                              </table>
                        </div><!-- /.row -->
                    </div>
                </div><!-- /.row -->
            </div>
        </div>
        <!-- /#page-content-wrapper -->
</div><!-- end wrapper -->

<%= render 'dashboards/toggle_sidebar_script' %>



