<%= simple_form_for(@size) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :portion_size %>
    <%= f.input :size_based_price %>
    <%= f.input :size_description %>
  </div>
  <div class="form-group">
  <%= f.fields_for :option_groups do |option_groups_form_for| %>
      <%= render 'option_groups_fields', f: option_groups_form_for %>
    <% end %>
  <%= link_to_add_sizes "Add Option Group", f, :option_groups %>
</div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
