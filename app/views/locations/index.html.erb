<div id="wrapper">
  <%= render 'dashboards/merchant_nav' %>

  <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <a href="#menu-toggle" class="btn btn-info btn-xs" id="menu-toggle">Toggle Menu</a>
                        
                        <div class="row" style="margin-top: 30px;">
                            <h1>Listing Locations</h1>
                            
                                <%= link_to 'New Location', new_location_path, class: "btn btn-success" %>
                            
                            <table class="table">
                              <thead>
                                <tr>
                                  <th>Name</th>
                                  <th>About</th>
                                  <th>Phone</th>
                                  <th>Email</th>
                                  <th>Takeout</th>
                                  <th>Delivery</th>
                                  <th>Address</th>
                                  <th>MID</th>
                                  <th colspan="3"></th>
                                </tr>
                              </thead>

                              <tbody>
                                <% @locations.each do |location| %>
                                  <tr>
                                    <td><%= location.name %></td>
                                    <td><%= location.about %></td>
                                    <td><%= location.phone %></td>
                                    <td><%= location.email %></td>
                                    <td><%= location.takeout %></td>
                                    <td><%= location.delivery %></td>
                                    <td><%= location.address %></td>
                                    <td><%= location.merchant_id %></td>
                                    <td><%= location.category_ids %></td>
                                    
                                    <td><%= link_to 'Show', location %></td>
                                    <td>
                                      <%= link_to edit_location_path(location) do %>
                                        <i class="fa fa-pencil-square-o btn btn-warning" aria-hidden="true"></i>
                                      <% end %>
                                    </td>
                                    <td>
                                      <%= link_to location, method: :delete, data: { confirm: "Are you sure? This can't be undone!" } do %>
                                        <i class="fa fa-trash btn btn-danger" aria-hidden="true"></i>
                                      <% end %>
                                    </td>
                                  </tr>
                                <% end %>
                              </tbody>
                            </table>

                      
                        </div><!-- /.row -->
                  
                    </div>
                </div><!-- /.row -->
            </div>
        </div>
        <!-- /#page-content-wrapper -->
</div><!-- end wrapper -->


<%= render 'dashboards/toggle_sidebar_script' %>