<fieldset>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Add Day</h3>
    </div>
    <div class="panel-body">
       <div class="row">
          <div class="col-md-4">
            <div class="form-group">
      	     <%= f.input :day, collection: Date::DAYNAMES.zip((0..6).to_a), prompt: "Select Day", class: "form-control" %>
            </div>
          </div><!-- end col-md-4 -->
          <div class="col-md-6">
            <div class="form-inline">
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.input :start_time, :as => :time, :ampm => true, class: "form-control" %>
                  </div>
                </div><!-- end col-sm-6 -->
                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.input :end_time, :as => :time, :ampm => true, class: "form-control" %>
                  </div>
                </div><!-- end col-sm-6 -->
              </div><!-- end row -->
            </div><!-- end col-md-6 -->
          </div><!-- end col-md-4 -->
          <div class="col-md-2">
            <%= f.input :closed %>
          </div><!-- end col-md-4 -->
      </div><!-- end row -->
    </div><!-- end panel-body -->
    <div class="panel-footer">
  	<%= f.hidden_field :_destroy %>
  	<%= link_to "remove day", '#', class: "remove_hours btn btn-danger btn-xs" %>
    </div><!-- end panel footer -->
  </div><!-- end panel panel-default -->
</fieldset>