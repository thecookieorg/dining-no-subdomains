<fieldset>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Add Hours</h3>
  </div>
  <div class="panel-body">
     <div class="row">
        <div class="col-md-4">
          <%= f.label :day %><br />
    	  <%= f.select :day, Date::DAYNAMES.zip((0..6).to_a) %>
        </div><!-- end col-md-4 -->

        <div class="col-md-4">
          <%= f.input_field :start_time %>
          <%= f.input_field :end_time %>
        </div><!-- end col-md-4 -->

        <div class="col-md-4">
          <%= f.input :closed %>
        </div><!-- end col-md-4 -->
    </div><!-- end row -->
  </div><!-- end panel-body -->
  <div class="panel-footer">
	<%= f.hidden_field :_destroy %>
	<%= link_to "remove day", '#', class: "remove_hours btn btn-danger btn-xs" %>
  </div><!-- end panel footer -->
</div><!-- end panel panel-default -->
</fieldset>