<%= simple_form_for(@location_hour) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

    <div class="form-group">
	  <%= f.fields_for :hours do |hours_form_for| %>
	      <%= render 'hour_fields', f: hours_form_for %>
	    <% end %>
	  <%= link_to_add_sizes "Add Day", f, :hours %>
	</div>
  <hr>
  <div class="form-actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
